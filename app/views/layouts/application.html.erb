  </head>

  <body>
    <header>
      <h2>Learning RoR</h2>
      <p>
        <%= link_to_unless I18n.locale == :en, "English", locale: :en %>
        |
        <%= link_to_unless I18n.locale == :de, "LietuviÅ³", locale: :lt %>
      </p>
      <hr>
      <% flash.each do |k, v| %>
